<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF5DE"
    android:orientation="vertical"
    tools:context=".SimulacionDeConfirmaciones">

    <android.support.v7.widget.Toolbar
        android:id="@+id/simulation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFCF8E"
        android:backgroundTintMode="screen"
        app:logo="@drawable/icon_confirmar_40dp"
        app:title="Simulacion de ordenes"> </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:text="Opciones: " />

        <Spinner
            android:id="@+id/confirmation_spinner"
            android:layout_width="222dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/confirmation_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAF5DE"
        android:padding="15dp"> </android.support.v7.widget.RecyclerView>

</LinearLayout>