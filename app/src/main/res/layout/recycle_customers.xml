<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customer_item"
    style="?android:listSeparatorTextViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAF5DE"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#A09999" />

    <!--
    apellido, nombre, un telÃ©fono y el e-mail
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Lorem Ipsum"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="18dp" />

        <TextView
            android:id="@+id/customer_phone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone_black_40dp"
            android:gravity="center"
            android:text="N/A"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/customer_phone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone_black_40dp"
            android:gravity="center"
            android:text="N/A"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/customer_phone3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone_black_40dp"
            android:gravity="center"
            android:text="N/A"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/customer_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_email_black_40dp"
            android:gravity="center"
            android:text="N/A"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/customer_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_home_black_40dp"
            android:gravity="center"
            android:text="N/A"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>