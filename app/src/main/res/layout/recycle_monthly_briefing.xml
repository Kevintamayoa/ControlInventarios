<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cvLinearLayout"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="7dp"
    tools:context=".ResumenVentas">

    <android.support.v7.widget.CardView
        android:id="@+id/briefing_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F7E6BD"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="15dp"
        app:contentPaddingLeft="10dp"
        app:contentPaddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/briefing_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="150dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/briefing_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem"
                    android:textSize="28sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/briefing_earning"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="Ganancias: $1,919,191.00" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>