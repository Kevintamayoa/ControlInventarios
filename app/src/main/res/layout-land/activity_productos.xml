<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAF5DE"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFCF8E"
        android:backgroundTintMode="screen"
        app:title="Productos"
        app:logo="@drawable/icon_reportes_mini"
        >
        <android.support.v7.widget.ActionMenuView
            android:id="@+id/buscarproductos_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@android:dimen/app_icon_size"
            android:translationX="450dp"
            android:tooltipText="Buscar prodcutos"
            android:background="@drawable/ic_view"></android.support.v7.widget.ActionMenuView>

    </android.support.v7.widget.Toolbar>

         <LinearLayout
             android:layout_width="210dp"
             android:layout_height="match_parent"
             android:layout_marginRight="18dp"
             android:gravity="center_vertical"
             android:orientation="horizontal">


    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:layout_marginRight="18dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar:" />

        <EditText
            android:id="@+id/buscarproductos_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filtro:" />

        <Spinner
            android:id="@+id/categoriaproductos_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/productos_recycleview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FAF5DE"></android.support.v7.widget.RecyclerView>




      </LinearLayout>










</LinearLayout>