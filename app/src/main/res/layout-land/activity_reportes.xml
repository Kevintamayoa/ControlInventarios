<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="#FAF5DE"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <ImageButton
            android:id="@+id/faltantes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_faltantes"
            android:backgroundTint="@android:color/transparent"
            android:text="Ordenes"/>


    <Space
        android:layout_width="30dp"
        android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/confitmacion_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:gravity="center"
            android:src="@drawable/icon_confirmar"
            android:text="Ordenes" />

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/resumen_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_resumen"
            android:backgroundTint="@android:color/transparent"
            android:gravity="center"
            android:text="Ordenes"/>

</LinearLayout>
</LinearLayout>